import java.util.*;
import java.io.*;
import java.lang.*;

public class createfiles {
	
	private Formatter x;
	
	public void openFile(){
		try{
			x= new Formatter("formal.txt");
		}
		
		catch (Exception e){
			System.out.println("there is a error");
		}
	}
	
	public void addRecords(){
		x.format("%s%s%s", "11 ", "Manja ", "Babu");
	}
	
	public void closeFile(){
		x.close();
	}

}
